<h1>My Tasks</h1>
<h4><%= link_to "Create new task", new_task_path  %></h4>
<ul>
  <% @tasks.each do |task| %>
  <li><%= check_box_tag '', '', task.completed %> <%= link_to task.title, task_path(task) %> - <%= link_to "Delete task", task_path(task), method: :delete, data: { confirm: "Delete #{task.title}" }  %></li>
  <% end %>
</ul>
